{% comment %}
  Tabbed Popular Products - All / Bedroom / Living Room / Decoration
{% endcomment %}

{% schema %}
{
  "name": "Tabbed Popular Products",
  "tag": "section",
  "class": "product-area pb-100",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Popular Items"
    }
  ],
  "presets": [
    {
      "name": "Tabbed Popular Products"
    }
  ]
}
{% endschema %}

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="site-heading-inline item-tab">
        <h2 class="site-title">{{ section.settings.title }}</h2>
        <ul class="nav nav-pills" id="popular-tabs" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="all-tab" data-bs-toggle="pill" data-bs-target="#all" type="button">All Items</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="bedroom-tab" data-bs-toggle="pill" data-bs-target="#bedroom" type="button">Bedroom</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="decoration-tab" data-bs-toggle="pill" data-bs-target="#decoration" type="button">Decoration</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="living-tab" data-bs-toggle="pill" data-bs-target="#living" type="button">Living Room</button>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="tab-content" id="popular-tabContent">
    <div class="tab-pane fade show active" id="all" role="tabpanel">
      <div class="row g-3">
        {% for product in collections['all'].products limit: 8 %}
          <div class="col-md-6 col-lg-4 col-xl">
            {% render 'product-card', product_card_product: product %}
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="tab-pane fade" id="bedroom" role="tabpanel">
      <div class="row g-3">
        {% for product in collections['bedroom'].products limit: 8 %}
          <div class="col-md-6 col-lg-4 col-xl">
            {% render 'product-card', product_card_product: product %}
          </div>
        {% endfor %}
      </div>
    </div>

    <!-- Add other tabs (decoration, living) similarly -->
  </div>
</div>